{
  "extends": "solhint:recommended",
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "indent": [true, "spaces", 4],
    "two-lines-top-level-separator": false,
    "var-name-mixedcase": false,
    "max-line-length": false,
    "max-states-count": false
  },
  "plugins": ["prettier"]
}
